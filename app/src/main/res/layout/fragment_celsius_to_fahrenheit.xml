<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CelsiusToFahrenheit">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"

        android:layout_height="50dp"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fahrenheit Value : "
            />
        <TextView
            android:gravity="left"
            android:id="@+id/CtoFResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:text="0" />


    </LinearLayout>
</LinearLayout>

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Id : 181-15-10996" />

    <EditText
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/CtoFinputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the Temperature (Celsius)"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CtoFcalculate"
        android:text="Calculate"
        />

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>